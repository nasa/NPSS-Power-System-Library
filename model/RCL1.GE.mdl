class Bat extends Element{
  ElectricOutputPort EP_O;
  ElectricInputPort EP_I1, EP_I2;
}

real defaultFrequency = 60.;

Bat Bat{
  void postexecute(){
    EP_O.frequency = 60.;
    EP_O.setIV( 0,0, 120, 0 );
    EP_I1.setIV( 0, 0, 0, 0 );
    EP_I2.setIV( 0, 0, 0, 0 );
  }
}

Capacitor C1{
  C = .0000047;  
}

Inductor L1{
  L = .65;
}

Capacitor C2{
  C = .0000015;
}

